<script>
var isgjz1=true;
	var isgjz2=true;
	var isgjz3=true;
	var isgjz4=true;

	function checkgjz(field,i)
	{
		if(isNaN(field.value))
		{
			var str=field.value;
			$.get("gjz.php?act=key&key="+str,function(data,status){
				if(data=='false')
				{
					if(i==1)
						isgjz1=false; 
					if(i==2)
						isgjz2=false;  
					if(i==3)
						isgjz3=false;  
					if(i==4) 
						isgjz4=false; 
					field.value='';
					alert("检测到屏蔽词,请重新输入！");
					var onblurevent=field.onblur;
					field.onblur = "";
					setTimeout(function(){
						field.focus();
						field.onblur=onblurevent;
					},0);
				}
				else
				{
					if(i==1)
						isgjz1=true; 
					if(i==2)
						isgjz2=true;  
					if(i==3)
						isgjz3=true;  
					if(i==4) 
						isgjz4=true; 
				}
			}); 
		}
	}
	function tjidentity()
	{
			if(!(isgjz1||isgjz2))
			{
				alert('检测到屏蔽词,请重新输入！');
				return false;
			}
			else
			{
				return identity();
			}
	}
</script>
