<script>
								
                                function change_p_type(){
									if($("#password").attr("type") == "password"){
 										$("#p_type").addClass("on");
										document.getElementById("password").type="text";						

									}
									else{
										$("#p_type").removeClass("on");
										document.getElementById("password").type="password";
									}
								}
	var isgjz1=true;
	var isgjz2=true;

	
	function checkgjz(field,i)
	{
		if(isNaN(field.value))
		{
			var str=field.value;
			$.get("gjz.php?act=key&key="+str,function(data,status){
				if(data=='false')
				{
					if(i==1)
						isgjz1=false; 
					if(i==2)
						isgjz2=false;   
					alert("检测到屏蔽词,请重新输入！");
					var onblurevent=field.onblur;
					field.onblur = "";
					setTimeout(function(){
						field.focus();
						field.onblur=onblurevent;
					},0);
				}
				else
				{
					if(i==1)
						isgjz1=true; 
					if(i==2)
						isgjz2=true;   
				}
			}); 
		}
	}
	
	function tj()
	{
			if(!(isgjz1||isgjz2))
			{
				alert('检测到屏蔽词,请重新输入！');
				return false;
			}
			else
			{
				return user_login(1);
			}
	}
                                </script>
