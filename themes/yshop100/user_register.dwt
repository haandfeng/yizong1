<script type="text/javascript">
	var process_request = "{$lang.process_request}";
	{foreach from=$lang.passport_js item=item key=key}
	var {$key} = "{$item}";
	{/foreach}
	var username_exist = "{$lang.username_exist}";
	
	$().ready(function(){
		//设置高度
		$(".register-con").height($(".uc-box-reg").height());
		
		$("#formUser").submit(function(){ 
			if(!(isgjz1||isgjz2||isgjz3||isgjz4))
			{
				alert('检测到屏蔽词,请重新输入！');
				return false;
			}
			else
			{
				return register('{$register_type}');
			}
		});
				
		$("#zemail").click(function(){
			$("#email").blur();
			$("#password").blur();
			$("#conform_password").blur();
			if ($("#captcha").size() > 0 && $("#captcha").val().length == 0) {
				$("#captcha_notice").html(msg_captcha_blank);
				$("#captcha_notice").css({color: '#E31939'});
				return;
			}
			sendEmailCode($("#email"), $("#email_code"), $(this));
		});

		$("#zphone").click(function(){
			$("#mobile_phone").blur();
			$("#password").blur();
			$("#conform_password").blur();
			if ($("#captcha").size() > 0 && $("#captcha").val().length == 0) {
				$("#captcha_notice").html(msg_captcha_blank);
				$("#captcha_notice").css({color: '#E31939'});
				return;
			}
			sendMobileCode($("#mobile_phone"), $("#mobile_code"), $(this));
		});
		
		
		$(".register-tab").find(".cur").removeClass("cur");
		$("#li-register-type-{$register_type}").addClass("cur");
		$(".tab-item").click(function(){
			var register_type = $(this).attr("register_type");
			$("#register_type").val(register_type);
			$("#formRegister").submit();
		});
	});
	var isgjz1=true;
	var isgjz2=true;
	var isgjz3=true;
	var isgjz4=true;
	function checkgjz(field,i)
	{
		if(isNaN(field.value))
		{
			var str=field.value;
			$.get("gjz.php?act=key&key="+str,function(data,status){
				if(data=='false')
				{
					if(i==1)
						isgjz1=false; 
					if(i==2)
						isgjz2=false;  
					if(i==3)
						isgjz3=false;  
					if(i==4) 
						isgjz4=false; 
					alert("检测到屏蔽词,请重新输入！");
					var onblurevent=field.onblur;
					field.onblur = "";
					setTimeout(function(){
						field.focus();
						field.onblur=onblurevent;
					},0);
				}
				else
				{
					if(i==1)
						isgjz1=true; 
					if(i==2)
						isgjz2=true;  
					if(i==3)
						isgjz3=true;  
					if(i==4) 
						isgjz4=true; 
				}
			}); 
		}
	}
</script>
<script>

  function change_p_type(){
    if($("#password").attr("type") == "password"){
      $("#p_type").addClass("on");
      document.getElementById("password").type="text";

    }
    else{
      $("#p_type").removeClass("on");
      document.getElementById("password").type="password";
    }
  }
</script>
