<!---切换js----->

<script src="themesmobile/yshop100com_mobile/js/jquery.nicescroll.min.js"></script> 

<script type="text/javascript">
	var id="";
	var idtext="";
	var page=0;
    //点击切换2 3级分类
	var array=new Array();
	$('.category1 li').each(function(){ 
		array.push($(this).position().top-45);
	});
	
	id=$('.cur1').attr('id');
	idtext=$('.cur1').text();
	$('.all').text("进入"+$('.cur1').text()+"频道 >");
	$('.all').attr('href','category.php?id='+$('.cur1').attr('id')); 

		$(document).ready(function(){
			console.log(id);
			$("li[catid='"+id+"']").find('i').attr('id','cat_more');
			$("#"+id).parents().show();

			$("html,body").animate({scrollTop:($("#"+id).offset().top - 100)},2000)

			$('.category1 li').click(function() {
				if($(this).is('.cat1') == false && $(this).is('.cat1_more') == false){
					document.location="catalog.php?ceid="+$(this).attr('id');
				}
			});

			$('.cat1').click(function() {
				var catid = $(this).attr('catid');
				if ($("li[catid='"+catid+"']").hasClass("cat1_more")) {
					setTimeout(function(){catUp(catid);},100);
				}else if($("li[catid='"+catid+"']").hasClass("cat1_default")){
					setTimeout(function(){catDown(catid);},100);
				}

			});
		});

			

function catUp(catid){
	$("li[catid='"+catid+"']").removeClass("cat1_more").addClass("cat1_default");
	$("li[catid='"+catid+"']").find("i").attr("id","");
	$('#cat2_'+catid).slideUp();
}

function catDown(catid){
	$('.cat2').slideUp();
	$('.cat1').removeClass("cat1_more").addClass("cat1_default");
	$('.cat1 i').attr("id","");
	$("li[catid='"+catid+"']").removeClass("cat1_default").addClass("cat1_more");
	$("li[catid='"+catid+"']").find("i").attr("id","cat_more");
	$('#cat2_'+catid).slideDown();
}

function goTop(){
	$('html,body').animate({'scrollTop':0},600);
}

</script>
<a href="javascript:goTop();" class="gotop" style=" z-index:9999"><img src="themesmobile/yshop100com_mobile/images/topup.png"></a>
</body>
