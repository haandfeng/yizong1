<div class="container">    
  <div class="category-box">
    <div class="category1" style="outline: none;" tabindex="5000">
      <ul class="clearfix" style=" padding-top:45px;">

       	<!--{foreach from=$categories item=cat name=name}-->
       	{if $cat.cat_id}
        <li class="cat1 {if $ceid=='' and $smarty.foreach.name.first}cat1_more{else}cat1_default{/if}" catid="{$cat.id}">
        	<span>{$cat.name|escape:html}<i></i></span>
        </li>
        <div class="cat2" id="cat2_{$cat.id}">
        	<li {if $ceid=="" and $smarty.foreach.name.first}class="cur1 cur"{/if} {if $ceid==$cat.id}class="cur1 cur"{/if} id="{$cat.id}"><span>全部商品</span></li>
        	{foreach from=$cat.cat_id item=cat2 name=cat2}
				<li {if $ceid==$cat2.id}class="cur1 cur"{/if} id="{$cat2.id}"><span>{$cat2.name|escape:html}</span></li>
				{if $ceid==$cat2.id || $ceid==$cat.id}<script>$("li[catid='{$cat.id}']").find("i").attr('id','cat_more');$("li[catid='{$cat.id}']").removeClass('cat1_default').addClass('cat1_more');</script>{/if}
        	{/foreach}
        </div>
        {else}
		<li {if $ceid=="" and $smarty.foreach.name.first}class="cur cur1"{/if} {if $ceid==$cat.id}class="cur cur1"{/if} id="{$cat.id}">
        	<span>{$cat.name|escape:html}</span>
        </li>
        {/if}

		<!--{/foreach}-->


      </ul>
    </div>
    <script type="text/javascript">
	var url = '/mobile/catalog.php?act=ajax&ceid='+$('.cur1').attr('id');
	$(function(){
		$('#list').more({'address': url});
	});
	function goTop(){
		$('html,body').animate({'scrollTop':0},600);
	}
	</script>
    <div class="category2" style=" outline: none; overflow-y:scroll" tabindex="5001">
   <dl style="display: none; padding-top:45px;display: block;"> 
   		<a href="#" class="all" style=" color:#FFF"></a>  
