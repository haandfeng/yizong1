<!-- 切换js -->
<script type="text/javascript">
$(document).ready(function (){
  //权益按钮
    $(".power-btn").click(function(){
      var pid = $(this).attr('pid');
      if($("#qa"+pid).is(":hidden")){
        $("div[id^='qa']").hide();
        $("#qa"+pid).fadeIn(700);
        $('body,html').animate({scrollTop: $(this).offset().top}, 700);
        $("#select").remove();
        $(this).append('<i id="select"></i>');
        $("#select").fadeIn(700);
      }else{
        $("div[id^='qa']").fadeOut(700);
        $("#select").fadeOut(700);
      }
    });

  //任务中心
 
	 $(".tosbox").click(function(){  
	  Ajax.call('user.php?act=tosign','sign',change_sign_mission,'GET','TEXT',true,true);
	});
	function change_sign_mission(result){ 
		  $('#mission_points').html('+' + result);
		  $('#mission_points').show();
		  $('#mission_points').fadeOut(700);
    }

});
 
</script>



