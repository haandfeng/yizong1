<script type="text/javascript">

 Ajax.call('v_user_agree_period.php', 'act=bank_card', bankName, 'POST', 'JSON');

 $("#bank_card").blur(function(){
  var bank_card = $("#bank_card").val();
  if(bank_card.length >= 16){
    $("#bank_name").hide();
    $("#bank").append("<img class='loader' src='images/category/loader.gif' style='height:40px' />");
    Ajax.call('v_user_agree_period.php', 'act=bank_card&cardid=' + bank_card, bankName, 'POST', 'JSON');
  }
 });


function bankName(result){
  $(".loader").hide();
  $("#bank_name").show();
  $("#bank_name").html(result);
}
</script>
