<!---切换js----->
  
<script type="text/javascript">
	var id="";
	var idtext="";
	var page=0;
    //点击切换2 3级分类
	var array=new Array();
	$('.category1 li').each(function(){ 
		array.push($(this).position().top-45);
	});
	
	id=$('.cur1').attr('id');
	idtext=$('.cur1').text(); 
		$(document).ready(function(){
			console.log(id);
			 
			$('.category1 li').click(function() {
				if($(this).is('.cat1') == false && $(this).is('.cat1_more') == false){
					if($(this).attr('id')==undefined&&$(this).attr('title')==undefined)
					{ 
					}
					else
					{
						$('.category1 li').each(function(){ 
							$(this).removeClass("cur cur1");
						});
						$(this).addClass("cur cur1");
					}
				}
			});
			 
			 $(".single_item").each(function(){ 
				$(this).parent().parent().css('display','block'); 
			 });
		});

		    
</script> 
