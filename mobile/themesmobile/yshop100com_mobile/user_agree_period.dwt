<script>
function send_mobile_code( sendButton){ 
	if(isPhoneNo($("#mobile_phone").val())==false)
	{
	alert('请输入正确手机号');return;
	}
	var url = 'user_agree_period.php';
	$.post(url, {
		act: 'send_mobile_code', 
		mobile: $("#mobile_phone").val()
	}, function(result) {
		if (result == 'ok') {
			//倒计时
			countdown(sendButton);
		} else {
			alert(result);
		}
	}, 'text');
}
function isPhoneNo(phone) {
    if(!(/^1[3456789]\d{9}$/.test(phone))){  
        return false; 
    } 
	return true;
} 
</script>
