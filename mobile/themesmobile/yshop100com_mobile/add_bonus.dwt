 bonuscount++;
 </script>
<div class="user_bonus">
  <div class="bonus_l"> </div>
    <ul>
      <li>发行店铺：{$item.supplier_name}</li>
      <li>使用条件：满{$item.min_goods_amount}可用</li>
      <li>使用范围：{$item.remark}</li>
      <li>有效时间：{$item.use_enddate}</li>
    </ul>
	 
    <dl  style="background: #ef9f27;" onclick="document.location='user.php?act=add_onuser_bonus&type_id={$item.type_id}'">
      <dt><i>¥</i>{$item.type_money}<dt>
      <dd>{$item.status}</dd>
    </dl>
	
   <div class="bonus_r"> </div>
</div>
{/if}
{/foreach}

  {else}
   <script>
 bonuscount++;
 </script>
<div class="dotm_no">
  <dl>
    <dd>没有红包了哦</dd>
  </dl>
</div>
{/if} 
 
<script type="text/javascript">
if(bonuscount==0)
{
