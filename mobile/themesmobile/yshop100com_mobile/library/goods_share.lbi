<style>
    ::-webkit-scrollbar {width: 0px;}
    .f_mask {background-color: #000;opacity: 0.9;height: 100%;width: 100%; position: absolute;top: 0;left: 0;z-index: 111;display: none;}
    .good_canshu { width:96%; overflow-y:scroll;margin-left:2%;}
