    /*提示css*/
    .font_prompt{ font-size:14px; text-align:center; color:#999; margin-top:50px;}
</style>
<!-- 微信 提示分享弹出层 S-->
<section class="f_mask" style="display: none;"></section>
<section class="f_block" id="choose_attr" style="height:0; overflow:hidden;">
    <div class="erweimaimg">
        <span onclick="close_choose_attr();"><img src="http://localhost/ok/wap/templates/default/resource/images/tishi.png"></span>
    </div>
